    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.10",
    "shortid": "^2.2.16"
  },
  "devDependencies": {
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.15"
  }
